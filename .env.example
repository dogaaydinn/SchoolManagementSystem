# School Management System - Environment Variables Template
# Copy this file to .env and update with your actual values
# NEVER commit .env file to source control

# Database Configuration
DB_SERVER=localhost
DB_NAME=SchoolManagementDB
DB_USER=sa
DB_PASSWORD=YourStrong!Passw0rd
DB_TRUST_SERVER_CERTIFICATE=True

# Connection Strings (auto-constructed from above)
ConnectionStrings__DefaultConnection=Server=${DB_SERVER};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};TrustServerCertificate=${DB_TRUST_SERVER_CERTIFICATE};MultipleActiveResultSets=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
ConnectionStrings__Redis=${REDIS_HOST}:${REDIS_PORT}

# JWT Configuration
JWT__Secret=REPLACE_WITH_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG
JWT__Issuer=SchoolManagementSystem
JWT__Audience=SchoolManagementSystem
JWT__AccessTokenExpiryMinutes=15
JWT__RefreshTokenExpiryDays=7

# Logging Configuration
Seq__ServerUrl=http://localhost:5341

# CORS Configuration (comma-separated origins for production)
CorsOrigins__0=https://yourdomain.com
CorsOrigins__1=https://app.yourdomain.com

# Email Configuration (for future implementation)
Email__SmtpHost=smtp.gmail.com
Email__SmtpPort=587
Email__UseSsl=true
Email__From=noreply@schoolmanagement.com
Email__Username=your-email@example.com
Email__Password=your-app-specific-password

# SMS Configuration (Twilio - for future implementation)
Twilio__AccountSid=your-account-sid
Twilio__AuthToken=your-auth-token
Twilio__PhoneNumber=+1234567890

# Storage Configuration (Azure Blob or AWS S3 - for future implementation)
Storage__Type=Azure # or AWS
Storage__ConnectionString=your-connection-string
Storage__ContainerName=school-documents

# Rate Limiting Configuration
IpRateLimiting__EnableEndpointRateLimiting=true
IpRateLimiting__StackBlockedRequests=false
IpRateLimiting__HttpStatusCode=429

# Application Settings
ASPNETCORE_ENVIRONMENT=Development # Change to Production for prod
ASPNETCORE_URLS=http://+:80;https://+:443

# Health Check URLs
HealthChecks__UI__HealthChecksUri=http://localhost:5000/health

# API Keys (for external services - for future implementation)
ExternalServices__PaymentGateway__ApiKey=your-api-key
ExternalServices__PaymentGateway__ApiSecret=your-api-secret
